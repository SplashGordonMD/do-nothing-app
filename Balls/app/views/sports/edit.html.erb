<h1>Edit Sport</h1>
<%= form_tag "/sports/#{@sport.id}", method: :patch do %>
 <div class="form-group">
   <%= label_tag :name %> 
   <%=  text_field_tag :name, @sport.name, class: 'form control' %> 
 </div>
 <div class="form-group">
   <%= label_tag :tool %> 
   <%=  text_field_tag :tool, @sport.tool, class: 'form control' %> 
 </div>
 <%= submit_tag "Edit sport", class: "btn btn-primary" %>
<% end %> 

<h1>Edit Recipe</h1>
<%= form_tag '/recipes/:id', method: :patch do %>
  <div>
    Sport: <input type="text" name="sport" value="<%= @sport.name %>">
  </div>
  <div>
    Tool: <input type="text" name="tool" value="<%= @tool.name %>">
  </div>
  <input type="submit" value="Update Sport">
<% end %>