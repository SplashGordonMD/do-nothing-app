<h1>New Contact</h1>
<%= form_tag '/contacts', method: :post do %>
	<div>
		<%= label_tag :name %>
		<%= text_field_tag :name %>
	</div>
	<div>
		<%= label_tag :phone %>
		<%= text_field_tag :phone %>
	</div>
	<div>
		<%= label_tag :city %>
		<%= text_field_tag :city %>
	</div>
	<div>
		<%= submit_tag "Create new contact" %>
	</div>
		<% end %>