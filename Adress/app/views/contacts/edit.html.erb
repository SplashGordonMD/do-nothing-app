<h1>Edit Contact</h1>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
	<div>
		<%= label_tag :name %>
		<%= text_field_tag :name, @contact.name %>
	</div>
	<div>
		<%= label_tag :phone %>
		<%= text_field_tag :phone, @contact.phone %>
	</div>
	<div>
		<%= label_tag :city %>
		<%= text_field_tag :city, @contact.city %>
	</div>
	<div>
		<%= submit_tag "Update contact" %>
	</div>
		<% end %>