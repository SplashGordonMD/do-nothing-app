<h1>Edit Movies</h1>
<%= form_tag "/movies/#{@movie.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @movie.name %>
  </div>
  <div>
    <%= label_tag :genera %>
    <%= text_field_tag :genera, @movie.genera %>
  </div>
    <%= submit_tag "Update Movie" %>
  <% end %>
